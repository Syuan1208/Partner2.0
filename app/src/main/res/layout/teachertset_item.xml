<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/quiz_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="測驗"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/deletetset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/addtest_btn"
            android:background="@drawable/deletetset"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/addtest_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/addtest" />
    </RelativeLayout>

    <EditText
        android:id="@+id/enter_quiz"
        android:hint="開始輸入您的題目"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext2_border" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="答案"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/enter_answer"
        android:hint="開始輸入您的答案"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext2_border" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請記得確定題目以及答案"
            android:textColor="@color/red"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_check"
            android:layout_toLeftOf="@+id/cancel_btn"
            android:layout_marginTop="10dp"
            />
        <ImageButton
            android:id="@+id/cancel_btn"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_cancel"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>


</LinearLayout>